extends layout

block content
    section.container   
        
        table.table.table-striped.table-hover
            tr  
                th No
                th 작성일자
                th 작성시각
                th 작성자
                th 제목
                
            each vo,index in bbsList
            
                tr(data-id=vo._id)           
                    td #{index + 1}
                    td= vo.b_date
                    td= vo.b_time
                    td= vo.b_write
                    td
                        a(href="/bbs/view/" + vo._id)= vo.b_title
                    
        p
            a(href="/bbs/write") 새로작성